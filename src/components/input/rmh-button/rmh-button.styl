@import '../../../styles/variables'

.rmh-button
  flex: 1
  display: inline-flex
  align-items: center
  margin: 5px 5px
  padding: 0 10px
  height: 40px
  outline: none
  font-size: inherit
  font-family: inherit
  font-weight: 400
  transition: .3s ease
  color: rmh-color-default
  cursor: pointer
  min-width: fit-content
  overflow: hidden

  // default
  border-radius: 5px
  border: 1px solid transparent
  background: transparent

  .rmh-icon
    &.inline
      pointer-events: none
      margin-right: 5px

  &:hover
    background: rmh-color-grey-lighter
    border-color: alpha(rmh-color-grey, .5)

  &.disabled
    background: transparent
    border-color: transparent
    color: rmh-color-grey-darker
    cursor: default

  &.primary
    border-color: rmh-color-primary
    background: rmh-color-primary
    font-weight: 500
    color: rmh-color-white

    &:hover
      border-color: darken(rmh-color-primary, 20%)
      background: darken(rmh-color-primary, 20%)

    &.disabled
      background: alpha(rmh-color-grey-lighter, .5)
      border-color: alpha(rmh-color-grey-lighter, .5)
      color: rmh-color-grey-darker
      cursor: default
