@import '../../../styles/variables'

rmh-radio-size = 16px
rmh-radio-touch-size = 48px

.rmh-radio
  position: relative

  &:not(.disabled)

    .radio-container
      cursor: pointer
    
    label
      cursor: pointer
      display: flex
      align-items: center

      &:after
        color: rmh-color-red
      
  .radio-container
    display: flex
    align-items: center
    justify-content: center
    width: rmh-radio-size
    min-width: rmh-radio-size
    height: rmh-radio-size
    position: relative
    border-radius: 50%
    color: transparent
    border: 2px solid rmh-color-grey-darker
    transition: .3s ease

    &:focus
      outline: none

    &:before
      content: ' '
      position: absolute
      width: rmh-radio-touch-size
      height: rmh-radio-touch-size
      top: 50%
      left: 50%
      z-index: 11
      border-radius: 50%
      transform: translate(-50%, -50%)
      opacity: 0
      transition: .4s cubic-bezier(.55, 0, .55, .2), opacity 1s

    &:active:before
      background: rmh-color-primary
      opacity: .2
      transition: 0s

    &:after
      position: absolute
      top: 3px
      right: 3px
      bottom: 3px
      left: 3px
      border-radius: 50%
      opacity: 0
      transform: scale3D(.38, .38, 1)
      content: ' '
    
    .rmh-icon
      font-size: 16px
      font-weight: bold

    input
      position: absolute
      left: -999em

  label
    height: rmh-radio-size
    padding-left: 12px
    position: relative
    line-height: rmh-radio-size

  &.checked
    .radio-container
      border-color: rmh-color-primary
      color: rmh-color-white

      &:after
        opacity: 1
        background-color: rmh-color-primary
        transform: scale3D(1, 1, 1)
        transition: .3s ease

  &.disabled

    .radio-container
      border-color: rmh-color-grey
      color: rmh-color-grey
      cursor: default

    label
      color: rmh-color-grey

  &.required
    label:after
      position: absolute
      top: 2px
      right: 0
      transform: translateX(calc(100% + 2px))
      content: "*"
      line-height: 1em
      vertical-align: top

  .radio-container
    .rmh-icon
      font-size: rmh-radio-size - 2px
