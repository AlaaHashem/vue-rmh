.rmh-button
  flex: 1
  display: inline-flex
  align-items: center
  margin: 5px 5px
  padding: 0 10px
  height: 40px
  outline: none
  font-size: inherit
  font-family: inherit
  font-weight: 400
  transition: .3s ease
  color: rgba(0,0,0,.54)
  cursor: pointer
  min-width: fit-content
  overflow: hidden

  // default
  border-radius: 5px
  border: 1px solid transparent
  background: transparent

  .rmh-icon
    &.inline
      pointer-events: none
      margin-right: 5px

  &:hover
    background: #eee
    border-color: rgba(230, 230, 230, .5)

  &.disabled
    background: transparent
    border-color: transparent
    color: #aaa
    cursor: default

  &.primary
    border-color: #479ee8
    background: #479ee8
    font-weight: 500
    color: #fff

    &:hover
      border-color: darken(#479ee8, 20%)
      background: darken(#479ee8, 20%)

    &.disabled
      background: #f5f5f5
      border-color: #f5f5f5
      color: #aaa
      cursor: default
