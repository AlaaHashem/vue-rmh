.rmh-field
  display: flex
  margin: 30px 0
  padding: 0
  height: 30px
  line-height: 30px
  border-top: 1px solid transparent
  border-bottom: 1px solid rgba(0,0,0,.54)
  background: transparent
  color: rgba(0,0,0,.54)
  font-weight: 400
  font-size: 15px
  font-family: inherit
  transition: .5s ease

  label
    position: absolute
    pointer-events: none
    transition: .2s ease

  &.focused
    border-bottom-color: #479ee8
    
  &:not(.select).focused, &.filled
    label
      margin-top: -18px
      font-size: 11px

  &.focused
    label
      color: #479ee8
      